<?xml version="1.0"?>
<ruleset name="SII Boleta DTE">
    <config name="installed_paths" value="vendor/wp-coding-standards/wpcs"/>
    <arg name="extensions" value="php"/>
    <file>includes/</file>
    <file>sii-boleta-dte.php</file>
    <rule ref="WordPress">
        <exclude name="WordPress.WhiteSpace.PrecisionAlignment"/>
        <exclude name="WordPress.NamingConventions.PrefixAllGlobals"/>
        <exclude name="WordPress.WP.I18n"/>
        <exclude name="WordPress.WhiteSpace.DisallowInlineTabs"/>
        <exclude name="WordPress.WhiteSpace.ControlStructureSpacing"/>
        <exclude name="Generic.Functions.CallTimePassByReference"/>
        <exclude name="Squiz.WhiteSpace.LanguageConstructSpacing"/>
    </rule>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>tests/*</exclude-pattern>
    <exclude-pattern>includes/libs/*</exclude-pattern>
</ruleset>
