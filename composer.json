{
    "name": "sii-boleta-dte/sii-boleta-dte",
    "description": "Plugin modular para la emisiÃ³n de boletas DTE.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": {
    "libredte": {
        "type": "vcs",
        "url": "https://github.com/LibreDTE/libredte-lib-core"
    }
  },
    "require": {
        "php": ">=8.4",
        "libredte/libredte-lib-core": "dev-master#0e996e5b565bb23ca1310c3b6c4fa1a9bb2cb3ef@dev",
        "robrichards/xmlseclibs": "^3.0",
        "twig/twig": "^3.8",
        "tecnickcom/tcpdf": "^6.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "3.7.2",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Sii\\BoletaDte\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "vendor/bin/phpunit tests/Application tests/Domain tests/Infrastructure tests/Presentation tests/Shared",
        "test:integration": "vendor/bin/phpunit tests/Integration",
        "phpcs": "phpcs --warning-severity=0",
        "deploy": "scripts/deploy.sh"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
