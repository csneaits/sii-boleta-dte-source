<html>
<head>
    <meta charset="utf-8">
    <style>
        /* Page */
        html, body { width: 80mm; margin: 0; font-family: 'Liberation Sans', Arial, Helvetica, sans-serif; font-size: 10px; color: #111; }
        body { padding: 6mm; background: #fff; }

        /* Ticket container with outer border like the sample */
        .ticket { width: 100%; background: #fff; padding: 6px; box-sizing: border-box; border: 1px solid #111; }

        /* Header: logo left, company details right */
        .brand-header { display: grid; grid-template-columns: 56px 1fr; gap: 8px; align-items: start; }
        .brand-logo { width: 56px; height: auto; display: block; }
        .brand-info { text-align: left; }
        .brand-name { font-size: 16px; font-weight: 700; margin: 0; letter-spacing: 0.6px; }
        .brand-rut { font-size: 12px; font-weight: 700; margin: 2px 0; }
        .brand-giro { font-size: 9px; margin: 2px 0; color: #333; }
        .brand-address { font-size: 9px; color: #333; }

        .divider { border: 0; border-top: 1px solid #111; margin: 8px 0; }

        .document-meta { text-align: left; font-family: monospace; }
        .document-title { font-weight: 700; font-size: 12px; margin: 0; text-align: center; }
        .document-number { font-weight: 700; }

        /* Receptor + detalle grid */
        .receptor-detalle-grid { display: grid; grid-template-columns: 60% 40%; gap: 8px; align-items: start; }
        .info-table { width: 100%; border-collapse: collapse; font-size: 10px; }
        .info-table td.label { font-weight: 700; font-size: 9px; vertical-align: top; padding-right: 6px; }

        /* Items */
        .items-table { width: 100%; border-collapse: collapse; font-size: 11px; }
        .items-table thead th { text-align: left; font-weight: 700; font-family: monospace; font-size: 11px; padding-bottom: 6px; border-bottom: 1px solid #111; }
        .items-table th.amount, .items-table td.amount { text-align: right; font-family: monospace; }
        .items-table td { padding: 6px 0; border-bottom: 1px dotted #ccc; }
        .item-description { font-weight: 700; }
        .item-qty { font-size: 9px; color: #666; }

        /* Totals block uses monospace and right alignment similar to sample */
        .totals { width: 100%; margin-top: 8px; font-family: monospace; }
        .totals .row { display: flex; justify-content: space-between; padding: 3px 0; }
        .totals .label { font-weight: 700; }
        .totals .value { text-align: right; min-width: 60px; }

        .section-title { font-weight: 700; font-size: 11px; margin: 6px 0 4px; }

    /* Barcode / timbre area (placeholder) */
    .barcode-area { margin-top: 10px; border-top: 1px solid #111; padding-top: 8px; text-align: center; }
    .barcode-placeholder { width: 100%; height: 64px; background: repeating-linear-gradient(90deg,#000 0 2px, #fff 2px 6px); margin: 6px 0; }
    .stamp-text { font-size: 9px; margin: 6px 0 0; color: #333; }

        @page { size: 80mm 400mm; margin: 2mm; }
    </style>
</head>
<body>
    {% set emisor = document.Encabezado.Emisor %}
    {% set receptor = document.Encabezado.Receptor %}
    {% set iddoc = document.Encabezado.IdDoc %}
    {% set totales = document.Encabezado.Totales %}
    {% set otraMoneda = totales.TpoMoneda is not empty and totales.TpoMoneda == 'DOLAR USA' %}

    <div class="ticket">
        <div class="brand-block">
            {% if document.logo is not empty %}
                <img class="brand-logo" src="{{ document.logo }}" alt="Logo">
            {% endif %}
            <p class="brand-name">{{ emisor.RznSoc | default(emisor.RznSocEmisor) }}</p>
            <p class="brand-extra">RUT {{ emisor.RUTEmisor | format_as('billing_document.RUTEmisor') }}</p>
            {% set direccion = [emisor.DirOrigen, emisor.CmnaOrigen] | filter(v => v is not empty) | join(', ') %}
            {% if direccion is not empty %}
                <p class="brand-extra">{{ direccion }}</p>
            {% endif %}
        </div>

        <hr class="divider">

        <div class="document-meta">
            <p class="document-title">{{ iddoc.TipoDTE | format_as('billing_document.TipoDTE') }}</p>
            <p class="document-number">No. {{ iddoc.Folio }}</p>
            <p class="document-emission">Fecha: {{ iddoc.FchEmis | format_as('billing_document.FchEmis') }}{% if iddoc.FchVenc is not empty %} • Vence: {{ iddoc.FchVenc | format_as('billing_document.FchVenc') }}{% endif %}</p>
        </div>
        
        {# Compact monospace header block: LOCAL / DIRECCION / COMUNA / Terminal / Fecha / Vendedor #}
        <div class="header-info" style="margin-top:6px;">
            <pre style="font-family:monospace; font-size:10px; line-height:1.15; margin:0;">
{% if iddoc is not empty %}BOLETA ELECTRONICA N° {{ iddoc.Folio }}{% endif %}

{% set local_label = document.Local is defined and document.Local is not empty ? document.Local : (document.Encabezado.Emisor.CdgLocal is defined ? document.Encabezado.Emisor.CdgLocal : '') %}
{% if local_label is not empty %}LOCAL    : {{ local_label }}{% endif %}{% if receptor.DirRecep is not empty %}
DIRECCION: {{ receptor.DirRecep }}{% endif %}{% if receptor.CmnaRecep is not empty %}
COMUNA   : {{ receptor.CmnaRecep }}{% endif %}

{% set terminal = document.Encabezado.Terminal is defined and document.Encabezado.Terminal is not empty ? document.Encabezado.Terminal : (document.Terminal is defined ? document.Terminal : '') %}
{% set secuencia = iddoc.Secuencia is defined and iddoc.Secuencia is not empty ? iddoc.Secuencia : (document.Secuencia is defined ? document.Secuencia : '') %}
{% if terminal is not empty or secuencia is not empty %}{% if terminal is not empty %}Terminal : {{ terminal }}{% endif %}{% if secuencia is not empty %}  Secuencia: {{ secuencia }}{% endif %}{% endif %}

Fecha    : {{ iddoc.FchEmis | format_as('billing_document.FchEmis') }}{% if iddoc.Hora is not empty %}  Hora: {{ iddoc.Hora }}{% endif %}
{% if document.Encabezado.Emisor.CdgVendedor is not empty %}Vendedor : {{ document.Encabezado.Emisor.CdgVendedor }}{% endif %}
            </pre>
        </div>

        <div class="receptor-detalle-grid">
            <div class="receptor-column">
                <p class="section-title">Receptor</p>
                <table class="info-table">
                    <tbody>
                        {% if receptor.RUTRecep != '66666666-6' %}
                            <tr><td class="label">RUT</td><td>{{ receptor.RUTRecep | format_as('billing_document.RUTRecep') }}</td></tr>
                        {% endif %}
                        {% if receptor.RznSocRecep is not empty %}
                            <tr><td class="label">Nombre</td><td>{{ receptor.RznSocRecep }}</td></tr>
                        {% endif %}
                        {% set recep_dir = [receptor.DirRecep, receptor.CmnaRecep] | filter(v => v is not empty) | join(', ') %}
                        {% if recep_dir is not empty %}
                            <tr><td class="label">Direccion</td><td>{{ recep_dir }}</td></tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>

            <div class="detalle-column">
                <table class="items-table" role="presentation">
                    <thead>
                        <tr><th class="code">CODIGO</th><th class="description">DESCRIPCION</th><th class="amount">MONTO</th></tr>
                    </thead>
                    <tbody>
                        {% for detalle in document.Detalle %}
                            <tr>
                                <td class="code">{% if detalle.CdgItem is not empty and detalle.CdgItem.VlrCodigo is not empty %}{{ detalle.CdgItem.VlrCodigo }}{% else %}&nbsp;{% endif %}</td>
                                <td class="description">
                                    {% if detalle.NmbItem is not empty %}<div class="item-description">{{ detalle.NmbItem }}</div>{% endif %}
                                    {% if detalle.DscItem is not empty %}<div class="item-extra">{{ detalle.DscItem }}</div>{% endif %}
                                    {% set qty = detalle.QtyItem %}{% set price = detalle.PrcItem %}
                                    {% if qty is not empty or price is not empty %}
                                        <div class="item-qty">{% if qty is not empty %}Cant: {{ qty | number_format(0, ',', '.') }}{% endif %}{% if price is not empty %}{% if qty is not empty %} x {% endif %}{{ '$' ~ (price | number_format(0, ',', '.')) }}{% endif %}</div>
                                    {% endif %}
                                </td>
                                <td class="amount">{% if detalle.MontoItem is not empty %}{{ detalle.MontoItem | number_format(0, ',', '.') }}{% else %}&nbsp;{% endif %}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div>
            <p class="section-title">Totales</p>
            <div class="totals">
                {% if totales.MntNeto is not empty %}<div class="row"><div class="label">Neto</div><div class="value">{% if otraMoneda %}{{ totales.MntNeto | number_format(2, '.', ',') }}{% else %}{{ totales.MntNeto | number_format(0, ',', '.') }}{% endif %}</div></div>{% endif %}
                {% if totales.IVA is not empty %}<div class="row"><div class="label">IVA{% if totales.TasaIVA is not empty %} ({{ totales.TasaIVA }}%){% endif %}</div><div class="value">{% if otraMoneda %}{{ totales.IVA | number_format(2, '.', ',') }}{% else %}{{ totales.IVA | number_format(0, ',', '.') }}{% endif %}</div></div>{% endif %}
                {% if totales.MntTotal is not empty %}<div class="row"><div class="label">Total</div><div class="value">{% if otraMoneda %}{{ totales.MntTotal | number_format(2, '.', ',') }}{% else %}{{ totales.MntTotal | number_format(0, ',', '.') }}{% endif %}</div></div>{% endif %}
            </div>
        </div>

        {% if document.DscRcgGlobal is not empty %}
            <div>
                <p class="section-title">Descuentos / Recargos</p>
                <table class="info-table"><tbody>
                    {% for ajuste in document.DscRcgGlobal %}
                        {% if ajuste is iterable %}
                            <tr><td>{{ ajuste.TpoMov == 'D' ? 'Descuento' : 'Recargo' }}{% if ajuste.GlosaDR is not empty %} - {{ ajuste.GlosaDR }}{% endif %}</td><td style="text-align:right;">{{ ajuste.ValorDR }}{{ ajuste.TpoValor }}</td></tr>
                        {% endif %}
                    {% endfor %}
                </tbody></table>
            </div>
        {% endif %}

        {% if document.Referencia is not empty %}
            <div>
                <p class="section-title">Referencias</p>
                <table class="info-table"><tbody>
                    {% for referencia in document.Referencia %}
                        <tr><td>
                            {% if referencia.TpoDocRef is not empty %}{{ referencia.TpoDocRef | format_as('billing_document.TpoDocRef') }}{% endif %}
                            {% if referencia.FolioRef is defined and referencia.IndGlobal != 1 %} No. {{ referencia.FolioRef }}{% endif %}
                            {% if referencia.FchRef is not empty %} del {{ referencia.FchRef | format_as('billing_document.FchRef') }}{% endif %}
                            {% if referencia.RazonRef is not empty %} - {{ referencia.RazonRef }}{% endif %}
                        </td></tr>
                    {% endfor %}
                </tbody></table>
            </div>
        {% endif %}

        <div class="barcode-area">
            {% if document_stamp is not empty %}
                <img src="{{ document_stamp | format_as('billing_document.TED') }}" alt="Timbre Electronico SII" style="width:100%; height:auto; display:block; margin:0 auto;" />
                <p class="stamp-text">TIMBRE ELECTRONICO SII</p>
                {% if document_auth is not empty %}
                    <p class="stamp-text">Res. {{ document_auth.NroResol }} del {{ document_auth.FchResol | format_as('billing_document.FchResol') }}</p>
                {% endif %}
                <p class="stamp-text">Verifique documento en www.sii.cl</p>
                {# Optional small barcode line under the timbre: reuse the same image scaled down if needed #}
                <img src="{{ document_stamp | format_as('billing_document.TED') }}" alt="codigo" style="width:100%; height:34px; object-fit:contain; margin-top:8px;" />
            {% else %}
                <div class="barcode-placeholder" aria-hidden="true"></div>
            {% endif %}
        </div>

    </div> <!-- .ticket -->
</body>
</html>
