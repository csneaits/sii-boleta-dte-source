<html>
<head>
    <meta charset="utf-8">
    <style>
        html, body { width: 80mm; margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 10px; color: #111; }
        body { padding: 4mm; }
        .ticket { width: 100%; background: #fff; padding: 4px; box-sizing: border-box; border: none; }
        .brand-block { text-align: center; }
        .brand-logo { width: 48px; height: auto; display: block; margin: 0 auto 4px; }
        .brand-name { font-size: 13px; font-weight: 700; margin: 0; }
        .brand-extra { font-size: 9px; margin: 2px 0 0; }
        .divider { border: 0; border-top: 1px dashed #bbb; margin: 6px 0; }
        .document-meta { text-align: center; }
        .document-title { font-weight: 700; font-size: 11px; margin: 0; }
        .document-number { margin: 0; font-weight: 700; }
        .receptor-detalle-grid { display: grid; grid-template-columns: 58% 42%; gap: 6px; align-items: start; }
        .info-table { width: 100%; border-collapse: collapse; font-size: 10px; }
        .info-table td.label { font-weight: 700; font-size: 9px; vertical-align: top; padding-right: 4px; }
        .items-table { width: 100%; border-collapse: collapse; font-size: 10px; }
        .items-table thead th { text-align: left; font-weight: 700; font-size: 10px; padding-bottom: 4px; border-bottom: 1px solid #111; }
        .items-table th.amount, .items-table td.amount { text-align: right; }
        .items-table td { padding: 4px 0; border-bottom: 1px dotted #e6e6e6; }
        .item-description { font-weight: 700; }
        .item-qty { font-size: 9px; color: #666; }
        .totals { width: 100%; margin-top: 6px; }
        .totals .row { display: flex; justify-content: space-between; padding: 2px 0; }
        .totals .label { font-weight: 700; }
        .totals .value { text-align: right; min-width: 60px; }
        .section-title { font-weight: 700; font-size: 10px; margin: 6px 0 4px; }
        @page { size: 80mm 400mm; margin: 2mm; }
    </style>
</head>
<body>
    {% set emisor = document.Encabezado.Emisor %}
    {% set receptor = document.Encabezado.Receptor %}
    {% set iddoc = document.Encabezado.IdDoc %}
    {% set totales = document.Encabezado.Totales %}
    {% set otraMoneda = totales.TpoMoneda is not empty and totales.TpoMoneda == 'DOLAR USA' %}

    <div class="ticket">
        <div class="brand-block">
            {% if document.logo is not empty %}
                <img class="brand-logo" src="{{ document.logo }}" alt="Logo">
            {% endif %}
            <p class="brand-name">{{ emisor.RznSoc | default(emisor.RznSocEmisor) }}</p>
            <p class="brand-extra">RUT {{ emisor.RUTEmisor | format_as('billing_document.RUTEmisor') }}</p>
            {% set direccion = [emisor.DirOrigen, emisor.CmnaOrigen] | filter(v => v is not empty) | join(', ') %}
            {% if direccion is not empty %}
                <p class="brand-extra">{{ direccion }}</p>
            {% endif %}
        </div>

        <hr class="divider">

        <div class="document-meta">
            <p class="document-title">{{ iddoc.TipoDTE | format_as('billing_document.TipoDTE') }}</p>
            <p class="document-number">No. {{ iddoc.Folio }}</p>
            <p class="document-emission">Fecha: {{ iddoc.FchEmis | format_as('billing_document.FchEmis') }}{% if iddoc.FchVenc is not empty %} â€¢ Vence: {{ iddoc.FchVenc | format_as('billing_document.FchVenc') }}{% endif %}</p>
        </div>

        <div class="receptor-detalle-grid">
            <div class="receptor-column">
                <p class="section-title">Receptor</p>
                <table class="info-table">
                    <tbody>
                        {% if receptor.RUTRecep != '66666666-6' %}
                            <tr><td class="label">RUT</td><td>{{ receptor.RUTRecep | format_as('billing_document.RUTRecep') }}</td></tr>
                        {% endif %}
                        {% if receptor.RznSocRecep is not empty %}
                            <tr><td class="label">Nombre</td><td>{{ receptor.RznSocRecep }}</td></tr>
                        {% endif %}
                        {% set recep_dir = [receptor.DirRecep, receptor.CmnaRecep] | filter(v => v is not empty) | join(', ') %}
                        {% if recep_dir is not empty %}
                            <tr><td class="label">Direccion</td><td>{{ recep_dir }}</td></tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>

            <div class="detalle-column">
                <table class="items-table" role="presentation">
                    <thead>
                        <tr><th class="code">CODIGO</th><th class="description">DESCRIPCION</th><th class="amount">MONTO</th></tr>
                    </thead>
                    <tbody>
                        {% for detalle in document.Detalle %}
                            <tr>
                                <td class="code">{% if detalle.CdgItem is not empty and detalle.CdgItem.VlrCodigo is not empty %}{{ detalle.CdgItem.VlrCodigo }}{% else %}&nbsp;{% endif %}</td>
                                <td class="description">
                                    {% if detalle.NmbItem is not empty %}<div class="item-description">{{ detalle.NmbItem }}</div>{% endif %}
                                    {% if detalle.DscItem is not empty %}<div class="item-extra">{{ detalle.DscItem }}</div>{% endif %}
                                    {% set qty = detalle.QtyItem %}{% set price = detalle.PrcItem %}
                                    {% if qty is not empty or price is not empty %}
                                        <div class="item-qty">{% if qty is not empty %}Cant: {{ qty | number_format(0, ',', '.') }}{% endif %}{% if price is not empty %}{% if qty is not empty %} x {% endif %}{{ '$' ~ (price | number_format(0, ',', '.')) }}{% endif %}</div>
                                    {% endif %}
                                </td>
                                <td class="amount">{% if detalle.MontoItem is not empty %}{{ detalle.MontoItem | number_format(0, ',', '.') }}{% else %}&nbsp;{% endif %}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div>
            <p class="section-title">Totales</p>
            <div class="totals">
                {% if totales.MntNeto is not empty %}<div class="row"><div class="label">Neto</div><div class="value">{% if otraMoneda %}{{ totales.MntNeto | number_format(2, '.', ',') }}{% else %}{{ totales.MntNeto | number_format(0, ',', '.') }}{% endif %}</div></div>{% endif %}
                {% if totales.IVA is not empty %}<div class="row"><div class="label">IVA{% if totales.TasaIVA is not empty %} ({{ totales.TasaIVA }}%){% endif %}</div><div class="value">{% if otraMoneda %}{{ totales.IVA | number_format(2, '.', ',') }}{% else %}{{ totales.IVA | number_format(0, ',', '.') }}{% endif %}</div></div>{% endif %}
                {% if totales.MntTotal is not empty %}<div class="row"><div class="label">Total</div><div class="value">{% if otraMoneda %}{{ totales.MntTotal | number_format(2, '.', ',') }}{% else %}{{ totales.MntTotal | number_format(0, ',', '.') }}{% endif %}</div></div>{% endif %}
            </div>
        </div>

        {% if document.DscRcgGlobal is not empty %}
            <div>
                <p class="section-title">Descuentos / Recargos</p>
                <table class="info-table"><tbody>
                    {% for ajuste in document.DscRcgGlobal %}
                        {% if ajuste is iterable %}
                            <tr><td>{{ ajuste.TpoMov == 'D' ? 'Descuento' : 'Recargo' }}{% if ajuste.GlosaDR is not empty %} - {{ ajuste.GlosaDR }}{% endif %}</td><td style="text-align:right;">{{ ajuste.ValorDR }}{{ ajuste.TpoValor }}</td></tr>
                        {% endif %}
                    {% endfor %}
                </tbody></table>
            </div>
        {% endif %}

        {% if document.Referencia is not empty %}
            <div>
                <p class="section-title">Referencias</p>
                <table class="info-table"><tbody>
                    {% for referencia in document.Referencia %}
                        <tr><td>
                            {% if referencia.TpoDocRef is not empty %}{{ referencia.TpoDocRef | format_as('billing_document.TpoDocRef') }}{% endif %}
                            {% if referencia.FolioRef is defined and referencia.IndGlobal != 1 %} No. {{ referencia.FolioRef }}{% endif %}
                            {% if referencia.FchRef is not empty %} del {{ referencia.FchRef | format_as('billing_document.FchRef') }}{% endif %}
                            {% if referencia.RazonRef is not empty %} - {{ referencia.RazonRef }}{% endif %}
                        </td></tr>
                    {% endfor %}
                </tbody></table>
            </div>
        {% endif %}

        {% if document_stamp is not empty %}
            <div class="stamp">
                <img src="{{ document_stamp | format_as('billing_document.TED') }}" alt="Timbre Electronico">
                <p class="stamp-text">Timbre Electronico SII</p>
                {% if document_auth is not empty %}<p class="stamp-text">Resolucion {{ document_auth.NroResol }} del {{ document_auth.FchResol | format_as('billing_document.FchResol') }}</p>{% endif %}
            </div>
        {% endif %}

    </div> <!-- .ticket -->
</body>
</html>
